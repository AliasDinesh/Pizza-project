{% extends 'base.html.twig' %}

{% block title %}Fratelli Pizzaioli{% endblock %}

{% block body %}
    <div class="row gy-3">
        {%  for category in categories %}
        <div class="col-4">
            <div class="card" style="width: 18rem;">
                 <img src="img/categories/{{ category.name }}.jpeg" class="card-img-top" alt="...">
             <div class="card-body">
                <h5 class="card-title">{{ category.name }}</h5>
                 <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                 <a href="/category/{{ loop.index }}" class="btn btn-primary">Go somewhere</a>
            </div>
            </div> 
        </div>        
        {% endfor %}
    </div>
{% endblock %}


